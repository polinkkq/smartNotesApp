<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема приложения -->
    <style name="Base.Theme.SmartNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Фон окна -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Делаем статусбар и навбар прозрачными для edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- (опционально) светлый статусбар на светлом фоне -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Theme.SmartNotes" parent="Base.Theme.SmartNotes" />
</resources>
