<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="345dp"
        android:layout_height="623dp"
        android:background="@drawable/backlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="635dp"
            android:clipToPadding="true"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/TextAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Авторизация"
                android:textColor="#2C2C2C"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailAuth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtext"
                android:hint="example@email.com"
                android:padding="10dp" />

            <EditText
                android:id="@+id/passwordAuth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/inputtext"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="10dp" />

            <!-- ✅ Восстановление пароля -->
            <TextView
                android:id="@+id/textForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="12dp"
                android:text="Забыли пароль?"
                android:textColor="#686464"
                android:textSize="14sp" />

            <!-- ✅ Вход через Google -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#2BFF1010"
                    android:fontFamily="@font/inter_medium"
                    android:text="Войти через Google" />

                <Button
                    android:id="@+id/buttonAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2B0620AB"
                    android:fontFamily="@font/inter_medium"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Войти" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonGuest"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2B737171"
                android:fontFamily="@font/inter_medium"
                android:text="Продолжить как гость" />
            <TextView
                android:id="@+id/textRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Нет аккаунта? Зарегистрироваться"
                android:textColor="#686464" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
