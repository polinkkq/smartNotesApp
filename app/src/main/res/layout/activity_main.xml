<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Умные конспекты"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="#2C2C2C" />

    <Button
        android:id="@+id/btnTestRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тест подключения к API"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2B9B9797"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnGoToRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перейти к регистрации"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нажмите 'Тест подключения'"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:textColor="#666666" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тестовые данные для регистрации:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Имя: Тест\n• Фамилия: Пользователь\n• Email: test@test.com\n• Пароль: 123456"
        android:textSize="12sp"
        android:background="#E8F5E8"
        android:padding="12dp"
        android:textColor="#2E7D32" />

</LinearLayout>